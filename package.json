{
  "name": "@a51finance/concentrated-liquidity-tool",
  "description": "contracts for managing the liquidity on any concentrated AMM",
  "version": "1.0.0",
  "author": {
    "name": "a51finance",
    "url": "https://github.com/a51finance"
  },
  "devDependencies": {
    "prettier": "^3.0.0",
    "solhint-community": "^3.6.0"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "forge",
    "foundry",
    "smart-contracts",
    "solidity",
    "template"
  ],
  "private": true,
  "scripts": {
    "clean": "rm -rf cache out",
    "lint": "pnpm lint:sol && pnpm prettier:check",
    "lint:sol": "forge fmt --check && pnpm solhint {script,src,test}/**/*.sol",
    "prettier:check": "prettier --check **/*.{json,md,yml} --ignore-path=.prettierignore",
    "prettier:write": "prettier --write **/*.{json,md,yml} --ignore-path=.prettierignore",
    "deploy-alp-goerli":"forge script script/Deploy.s.sol:DeployALP --rpc-url https://rpc.ankr.com/eth_goerli --broadcast --verify -vvvv",
    "deploy-rebaseModule-goerli":"forge script script/Deploy.s.sol:DeployRebaseModule --rpc-url https://rpc.ankr.com/eth_goerli --broadcast --verify -vvvv"
  }
}
